<div @onclick="Set">
    <span>@Site.Board[X, Y]</span>
</div>

@code {
    [Parameter]
    public int X { get; set; }
    
    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public Frontend.Pages.Game Site { get;set; }

    void Set() {
        if (!Site.IsCurrentMover)
            return;

        Site.SendMove(X, Y);
        Site.IsCurrentMover = false;
    }
}
