<div class="tooltip-wrapper" @onclick="Click">
    <span>@Text</span>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string AfterClick { get; set; }

    void Click() {
        Text = AfterClick;
        StateHasChanged();
    }
}
